<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/image_button_size</item>
        <item name="android:layout_width">@dimen/image_button_size</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconSize">@dimen/image_button_icon</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="HeaderTextTh" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large_th</item>
    </style>

    <style name="HeaderTextEn" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_large_en</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_normal_th</item>
        <item name="paddingStart">@dimen/app_button_padding_horizontal</item>
        <item name="paddingEnd">@dimen/app_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/app_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/app_button_padding_vertical</item>
        <item name="cornerRadius">@dimen/app_button_corner_radius</item>
        <item name="android:layout_width">@dimen/app_button_equality_width</item>
        <item name="android:layout_height">@dimen/app_button_equality_height</item>
    </style>

    <style name="AdminAppButton" parent="AppButton">
        <item name="android:textSize">@dimen/text_normal_en</item>
    </style>

    <style name="TextAppButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_normal_th</item>
        <item name="paddingStart">@dimen/app_button_padding_horizontal</item>
        <item name="paddingEnd">@dimen/app_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/app_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/app_button_padding_vertical</item>
        <item name="cornerRadius">@dimen/app_button_corner_radius</item>
        <item name="android:layout_width">@dimen/app_button_equality_width</item>
        <item name="android:layout_height">@dimen/app_button_equality_height</item>
    </style>

    <style name="SettingsSelectButton" parent="TextAppButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_normal_en</item>
        <item name="iconSize">@dimen/settings_button_icon_size</item>
        <item name="iconPadding">@dimen/settings_button_icon_padding</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:layout_width">@dimen/horizontal_line_width</item>
        <item name="android:background">@color/design_default_color_secondary</item>
    </style>
</resources>